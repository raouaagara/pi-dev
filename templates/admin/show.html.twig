{% extends 'back.html.twig' %}

{% block title %}D√©tail de l'√©quipement{% endblock %}

{% block body %}
<style>
    .equipement-details {
        max-width: 700px;
        margin: 30px auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 12px;
        box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }

    .equipement-details h1 {
        margin-bottom: 25px;
        text-align: center;
        color: #343a40;
    }

    .equipement-details img {
        display: block;
        margin: 10px 0;
        border-radius: 8px;
    }

    .btn-group {
        display: flex;
        justify-content: center;
        gap: 10px;
        margin-top: 25px;
    }
</style>

<div class="equipement-details">
    <h1>D√©tail de l'√©quipement</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ equipement.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ equipement.description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ equipement.price }} TND</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>
                    {% if equipement.image %}
                        <img src="{{ asset('uploads/images/' ~ equipement.image) }}" alt="Image de l'√©quipement" style="max-width: 200px;">
                    {% else %}
                        <em>Aucune image</em>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>
                    {% if equipement.availability %}
                        <span class="badge bg-success">Oui</span>
                    {% else %}
                        <span class="badge bg-danger">Non</span>
                    {% endif %}
                </td>
            </tr>
            <tr>
                <th>Date d'ajout</th>
                <td>{{ equipement.dateAdded ? equipement.dateAdded|date('Y-m-d H:i') : 'N/A' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-group">
        <a href="{{ path('app_equipement_index') }}" class="btn btn-secondary">‚Üê Retour √† la liste</a>
        <a href="{{ path('app_equipement_edit', {'id': equipement.id}) }}" class="btn btn-warning">‚úèÔ∏è Modifier</a>
        <a href="{{ path('app_equipement_pdf', {'id': equipement.id}) }}" class="btn btn-outline-danger">üìÑ T√©l√©charger PDF</a>
    </div>

    <div class="mt-3 text-center">
        {{ include('equipement/_delete_form.html.twig') }}
    </div>
</div>
{% endblock %}
