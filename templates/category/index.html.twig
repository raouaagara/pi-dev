{% extends 'base.html.twig' %}

{% block title %}Category Index{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4 text-primary">ðŸ“‚ Category Index</h1>

        <table class="table table-striped table-hover table-bordered shadow-sm">
            <thead class="table-dark text-center">
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Icon</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for category in categories %}
                <tr class="align-middle text-center">
                    <td>{{ category.id }}</td>
                    <td class="fw-bold">{{ category.name }}</td>
                    <td>
                        {% if category.icon %}
                            <img src="{{ asset('public/images/' ~ category.icon) }}" 
                                 alt="{{ category.name }}" 
                                 width="40" height="40" class="rounded shadow-sm">
                        {% else %}
                            <span class="text-muted">No Icon</span>
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('app_category_show', {'id': category.id}) }}" 
                           class="btn btn-info btn-sm text-white shadow-sm" 
                           title="View category details">
                            <i class="bi bi-eye"></i> Show
                        </a>
                        <a href="{{ path('app_category_edit', {'id': category.id}) }}" 
                           class="btn btn-warning btn-sm text-white shadow-sm" 
                           title="Edit this category">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center text-muted">ðŸš« No records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="text-end mt-3">
            <a href="{{ path('app_category_new') }}" class="btn btn-success shadow-sm">
                <i class="bi bi-plus-circle"></i> Create new
            </a>
        </div>
    </div>
{% endblock %}

