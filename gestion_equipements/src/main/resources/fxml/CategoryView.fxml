<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.CategoryController" spacing="10">
    <Label text="Nom de la catégorie:"/>
    <TextField fx:id="nameField"/>

    <Label text="Icône:"/>
    <TextField fx:id="iconField"/>

    <TableView fx:id="categoryTable">
        <columns>
            <TableColumn fx:id="idColumn" text="ID"/>
            <TableColumn fx:id="nameColumn" text="Nom"/>
            <TableColumn fx:id="iconColumn" text="Icône"/>
        </columns>
    </TableView>

    <Button text="Ajouter" onAction="#addCategory"/>
    <Button text="Modifier"/>
    <Button text="Supprimer" onAction="#deleteCategory"/>
</VBox>
