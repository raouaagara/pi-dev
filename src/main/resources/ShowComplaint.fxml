<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" stylesheets="@AddComplaint.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.ShowComplaint">
    <children>
        <!-- Buttons for delete and update -->
        <Button layoutX="50.0" layoutY="20.0" mnemonicParsing="false" onAction="#deleteAction" text="Delete" />
        <Button layoutX="120.0" layoutY="20.0" mnemonicParsing="false" onAction="#updateAction" text="Update" />

        <!-- TableView -->
        <TableView fx:id="tableView" layoutX="50.0" layoutY="50.0" prefHeight="500.0" prefWidth="700.0">
            <columns>
                <TableColumn fx:id="titleColumn" prefWidth="200.0" text="Title" />
                <TableColumn fx:id="descriptionColumn" prefWidth="200.0" text="Description" />
                <TableColumn fx:id="categoryColumn" prefWidth="100.0" text="Category" />
                <TableColumn fx:id="locationColumn" prefWidth="100.0" text="Location" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="Status" />
                <TableColumn fx:id="datePostedColumn" prefWidth="100.0" text="Date Posted" />
                <TableColumn fx:id="userColumn" prefWidth="100.0" text="User" />
            </columns>
        </TableView>
    </children>
</AnchorPane>



