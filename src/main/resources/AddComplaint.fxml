<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="613.0" prefWidth="889.0" stylesheets="@AddComplaint.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.AddComplaint">

    <Label layoutX="35.0" layoutY="20.0" styleClass="label" text="Add Complaint" />

    <Label layoutX="35.0" layoutY="73.0" styleClass="label" text="Title:" />
    <TextArea fx:id="titleTextArea" layoutX="162.0" layoutY="60.0" prefHeight="25.0" prefWidth="400.0" styleClass="text-area" />

    <Label layoutX="11.0" layoutY="173.0" styleClass="label" text="Description:" />
    <TextArea fx:id="descriptionTextArea" layoutX="159.0" layoutY="153.0" prefHeight="100.0" prefWidth="400.0" styleClass="text-area" />

    <Label layoutX="22.0" layoutY="243.0" styleClass="label" text="Category:" />
    <ComboBox fx:id="categoryComboBox" layoutX="159.0" layoutY="261.0" prefHeight="25.0" prefWidth="400.0">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="pollution" />
                <String fx:value="path hole" />
                <String fx:value="other" />
            </FXCollections>
        </items>
    </ComboBox>

    <Label layoutX="24.0" layoutY="303.0" styleClass="label" text="Location:" />
    <TextArea fx:id="locationTextArea" layoutX="162.0" layoutY="296.0" prefHeight="25.0" prefWidth="400.0" styleClass="text-area" />

    <Label layoutX="27.0" layoutY="388.0" styleClass="label" text="Status:" />
    <ComboBox fx:id="statusComboBox" layoutX="159.0" layoutY="390.0" prefHeight="25.0" prefWidth="400.0">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="repaired" />
                <String fx:value="not repaired" />
                <String fx:value="pending" />
            </FXCollections>
        </items>
    </ComboBox>

    <Label layoutX="35.0" layoutY="451.0" styleClass="label" text="User:" />
    <TextArea fx:id="userTextArea" layoutX="162.0" layoutY="431.0" prefHeight="55.0" prefWidth="400.0" styleClass="text-area" />

    <!-- Button for adding the complaint -->
    <Button layoutX="441.0" layoutY="541.0" mnemonicParsing="false" onAction="#add" text="Add Complaint" />
    <Button fx:id="NextPage" layoutX="714.0" layoutY="541.0" mnemonicParsing="false" onAction="#NextPage" prefHeight="30.0" prefWidth="48.0" />
   <ImageView fitHeight="42.0" fitWidth="47.0" layoutX="187.0" layoutY="10.0">
      <image>
         <Image url="@complaint.png" />
      </image>
   </ImageView>
   <ImageView fitHeight="47.0" fitWidth="43.0" layoutX="717.0" layoutY="541.0">
      <image>
         <Image url="@next.png" />
      </image>
   </ImageView>
   <ButtonBar layoutX="311.0" layoutY="11.0" prefHeight="40.0" prefWidth="200.0" />
</AnchorPane>
