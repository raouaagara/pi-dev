<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" stylesheets="@AddComplaint.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.AddComplaint">

    <Label layoutX="35.0" layoutY="20.0" styleClass="label" text="Add Complaint" />

    <Label layoutX="35.0" layoutY="60.0" styleClass="label" text="Title:" />
    <TextArea fx:id="titleTextArea" layoutX="162.0" layoutY="60.0" prefHeight="25.0" prefWidth="400.0" styleClass="text-area" />

    <Label layoutX="35.0" layoutY="100.0" styleClass="label" text="Description:" />
    <TextArea fx:id="descriptionTextArea" layoutX="162.0" layoutY="100.0" prefHeight="100.0" prefWidth="400.0" styleClass="text-area" />

    <Label layoutX="35.0" layoutY="220.0" styleClass="label" text="Category:" />
    <TextArea fx:id="categoryTextArea" layoutX="162.0" layoutY="220.0" prefHeight="25.0" prefWidth="400.0" styleClass="text-area" />

    <Label layoutX="35.0" layoutY="260.0" styleClass="label" text="Location:" />
    <TextArea fx:id="locationTextArea" layoutX="162.0" layoutY="260.0" prefHeight="25.0" prefWidth="400.0" styleClass="text-area" />

    <Label layoutX="35.0" layoutY="300.0" styleClass="label" text="Status:" />
    <TextArea fx:id="statusTextArea" layoutX="162.0" layoutY="300.0" prefHeight="25.0" prefWidth="400.0" styleClass="text-area" />

    <Label layoutX="35.0" layoutY="340.0" styleClass="label" text="User:" />
    <TextArea fx:id="userTextArea" layoutX="162.0" layoutY="340.0" prefHeight="55.0" prefWidth="400.0" styleClass="text-area" />

    <!-- Button for adding the complaint -->
    <Button layoutX="242.0" layoutY="410.0" mnemonicParsing="false" onAction="#add" text="Add Complaint" />
    <Button fx:id="NextPage" layoutX="389.0" layoutY="410.0" mnemonicParsing="false" onAction="#NextPage" text="NextPage" />
</AnchorPane>
