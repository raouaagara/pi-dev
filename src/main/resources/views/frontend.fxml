<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<ScrollPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.frontListEventController">
   <VBox spacing="10">
      <padding>
         <Insets top="10" right="10" bottom="10" left="10"/>
      </padding>
      <HBox spacing="10" alignment="CENTER">
         <TextField fx:id="searchField" promptText="Rechercher un événement..." />
         <Button text="Rechercher" onAction="#handleSearch" />
         <Button text="Trier par date" onAction="#handleSortByDate" />
      </HBox>
      <!-- Utilisation d'un GridPane pour afficher les cartes d'événement -->
      <GridPane fx:id="eventsContainer" hgap="10" vgap="10" />
   </VBox>
</ScrollPane>