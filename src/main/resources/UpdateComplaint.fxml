<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="714.0" prefWidth="951.0" stylesheets="@AddComplaint.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.UpdateComplaint">

    <Label layoutX="35.0" layoutY="20.0" styleClass="label" text="Update Complaint" />

    <Label layoutX="35.0" layoutY="93.0" styleClass="label" text="Title:" />
    <TextArea fx:id="titleTextArea" layoutX="163.0" layoutY="80.0" prefHeight="25.0" prefWidth="400.0" styleClass="text-area" />

    <Label layoutX="26.0" layoutY="182.0" styleClass="label" text="Description:" />
    <TextArea fx:id="descriptionTextArea" layoutX="159.0" layoutY="171.0" prefHeight="100.0" prefWidth="400.0" styleClass="text-area" />

    <Label layoutX="22.0" layoutY="286.0" styleClass="label" text="Category:" />
    <ComboBox fx:id="categoryComboBox" layoutX="159.0" layoutY="301.0" prefHeight="25.0" prefWidth="400.0">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="pollution" />
                <String fx:value="path hole" />
                <String fx:value="other" />
            </FXCollections>
        </items>
    </ComboBox>

    <Label layoutX="24.0" layoutY="362.0" styleClass="label" text="Location:" />
    <TextArea fx:id="locationTextArea" layoutX="159.0" layoutY="357.0" prefHeight="25.0" prefWidth="400.0" styleClass="text-area" />

    <Label layoutX="27.0" layoutY="437.0" styleClass="label" text="Status:" />
    <ComboBox fx:id="statusComboBox" layoutX="159.0" layoutY="452.0" prefHeight="25.0" prefWidth="400.0">
        <items>
            <FXCollections fx:factory="observableArrayList">
                <String fx:value="repaired" />
                <String fx:value="not repaired" />
                <String fx:value="pending" />
            </FXCollections>
        </items>
    </ComboBox>

    <Label layoutX="35.0" layoutY="520.0" styleClass="label" text="User:" />
    <TextArea fx:id="userTextArea" layoutX="159.0" layoutY="509.0" prefHeight="55.0" prefWidth="400.0" styleClass="text-area" />

    <Button fx:id="updateButton" layoutX="323.0" layoutY="642.0" mnemonicParsing="false" onAction="#handleUpdateButtonAction" styleClass="button" text="Update" />

</AnchorPane>
