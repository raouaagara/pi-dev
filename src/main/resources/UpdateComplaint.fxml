<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@UpdateComplaint.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.UpdateComplaint">

    <Label layoutX="35.0" layoutY="20.0" styleClass="label" text="Update Complaint" />

    <Label layoutX="35.0" layoutY="60.0" styleClass="label" text="Title:" />
    <TextField fx:id="titleField" layoutX="162.0" layoutY="60.0" prefWidth="400.0" styleClass="text-field" />

    <Label layoutX="35.0" layoutY="100.0" styleClass="label" text="Description:" />
    <TextArea fx:id="descriptionTextArea" layoutX="162.0" layoutY="100.0" prefHeight="150.0" prefWidth="400.0" promptText="Enter your complaint details here..." styleClass="text-area" />

    <Label layoutX="36.0" layoutY="263.0" styleClass="label" text="Category:" />
    <ComboBox fx:id="categoryComboBox" layoutX="162.0" layoutY="261.0" prefWidth="200.0" />

    <Label layoutX="35.0" layoutY="310.0" styleClass="label" text="Location:" />
    <TextField fx:id="locationField" layoutX="162.0" layoutY="310.0" prefWidth="200.0" styleClass="text-field" />

    <Button fx:id="updateButton" layoutX="261.0" layoutY="350.0" mnemonicParsing="false" onAction="#handleUpdateButtonAction" styleClass="button" text="update" />

</AnchorPane>
