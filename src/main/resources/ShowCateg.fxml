<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="450.0" prefWidth="600.0" stylesheets="@AddComplaint.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.ShowComplaint">
    <children>
        <!-- Buttons for delete and update -->
        <Button layoutX="50.0" layoutY="20.0" mnemonicParsing="false" onAction="#deleteAction" text="Delete" />

        <!-- TableView -->
        <TableView fx:id="tableView" layoutX="50.0" layoutY="50.0" prefHeight="500.0" prefWidth="700.0">
            <columns>
                <TableColumn fx:id="categoryNameColumn" prefWidth="200.0" text="Category Name" />
                <TableColumn fx:id="categoryDescriptionColumn" prefWidth="200.0" text="Category Description" />
                <TableColumn fx:id="userIdColumn" prefWidth="100.0" text="User ID" />
            </columns>
        </TableView>
        <Button layoutX="153.0" layoutY="14.0" onAction="#updateSelectedComplaint" text="Update" />
    </children>
</AnchorPane>


